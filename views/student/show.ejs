<link rel="stylesheet" href="/css/showPage.css" />

<div class="page-content page-container" id="page-content">

  <div class="card-header align-middle d-flex justify-content-between my-5">
    <h3 >Student Information</h3>
    <a class="common-btn" href="/"><i class="fa-solid fa-arrow-left"></i> Back</a>
</div>

  <div class="padding">
    <div class="row container d-flex justify-content-center">
      <div class="col-xl-10 col-md-12">
        <div class="card user-card-full">
          <div class="row m-l-0 m-r-0">
            <div class="col-sm-4 bg-c-lite-green user-profile">
              <div class="card-block text-center text-white">
                <div class="m-b-25">

                  <% if (student.photo == "avatar.png") { %>
                    <img class="profile_show rounded-circle" src="/images/<%= student.photo %>"/>

                    <% } else { %>
                        <img class="profile_show rounded-circle" src="/images/students_image/<%= student.photo %>"/>
                <% } %>

                </div>
                <h6 class="f-w-600"><%= student.name %> </h6>
                <i
                  class="mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"
                ></i>
              </div>
            </div>
            <div class="col-sm-8">
              <div class="card-block">
                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Email</p>
                    <h6 class="text-muted f-w-400"><%= student.email %></h6>
                  </div>
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Phone</p>
                    <h6 class="text-muted f-w-400"><%= student.cell %></h6>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <p class="m-b-10 f-w-600">Location</p>
                    <h6 class="text-muted f-w-400"><%= student.location %></h6>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

