<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student Table</title>
    <link
      rel="shortcut icon"
      href="/public/images/avatar.png"
      type="image/x-icon"
    />
    <!-- Font Awesome -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
      integrity="sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <!-- Bootstrap CSS -->
    <link
      href="//cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Data Table CSS -->
    <link
      rel="stylesheet"
      href="//cdn.datatables.net/1.12.1/css/jquery.dataTables.min.css"
    />
    <!-- Style CSS -->
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <%- body %>

    <!-- Bootstrap JS -->
    <script
      src="//cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"
    ></script>
    <!--     
    <script>
        $('.student-data-table').DataTable();
    </script> -->

    <script>
      //Student Photo Preview
      const studentProfile = document.querySelector("#upload_student_photo");
      //Get Preview Profile Element
      const studentProfileTag = document.querySelector(".preview_profile");
      //Get Hide Def Profile Div
      const preProfile = document.querySelector(".preloaded_profile");

      if (studentProfile) {
        studentProfile.onchange = (e) => {
          //Get Image URL
          const profileLink = URL.createObjectURL(e.target.files[0]);
          //Get Image URL for Preview
          studentProfileTag.setAttribute("src", profileLink);
          //Hide Default Profile
          preProfile.style.display = "none";
        };
      }

      //Delete Btn Manage
      const delete_btn = document.querySelectorAll(".delete-btn");
      if (delete_btn) {
        delete_btn.forEach((item) => {
          item.onclick = (e) => {
            const conf = confirm("Are you sure ?");
            if (conf) {
              return true;
            } else {
              return false;
            }
          };
        });
      }
    </script>
  </body>
</html>
